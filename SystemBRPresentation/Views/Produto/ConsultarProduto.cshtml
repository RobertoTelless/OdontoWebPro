@using Presentation.Extensions
@model SystemBRPresentation.ViewModels.ProdutoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Produtos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaProduto", "Produto")">Produtos</a>
            </li>
            <li class="active">
                <strong>Produtos - Consulta & Edição</strong>
            </li>
        </ol>
        <br />
    </div>

    @*TABS - PRINCIPAL*@
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Produto - Edição</h5> &nbsp;&nbsp;&nbsp;
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Estoque</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Varejo</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Food Service</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-5">Informações Tributárias</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-6">Expedição</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">E-Commerce</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-8">Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-9">Custos & Preços</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-10">Observações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-11">Movimentação do Estoque</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-12">Resumos</a></li>
                            @if (Model.Composto)
                            {
                                <li class=""><a data-toggle="tab" href="#tab-13">Ficha Técnica</a></li>
                            }
                        </ul>

                        <div class="tab-content">

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="form-group">
                                            @if (!String.IsNullOrEmpty(Model.PROD_AQ_FOTO))
                                            {
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    <img src="@Url.Content(Model.PROD_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '@Url.Content(Model.PROD_AQ_FOTO)')">
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '~/Images/gallery/10s.jpg')">
                                                </div>
                                            }
                                        </div>
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                <br />
                                                Categoria*
                                                @Html.TextBoxFor(m => m.CATEGORIA_PRODUTO.CAPR_NM_NOME, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.CAPR_CD_ID, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                <br />
                                                Subcategoria
                                                @Html.TextBoxFor(m => m.SUBCATEGORIA_PRODUTO.SCPR_NM_NOME, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.SCPR_CD_ID, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                <br />
                                                Tipo de Produto*
                                                @Html.TextBox("TipoProduto", (String)ViewBag.TiposProduto, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_IN_TIPO_PRODUTO, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                <br />
                                                Produto Composto
                                                <br />
                                                @Html.CheckBoxFor(m => m.Composto, new { @class = "checkbox i-checks" })
                                                @Html.ValidationMessageFor(m => m.Composto, "", new { @style = "color:red" })
                                            </div>
                                        </div>
                                        <br /><br /><br /><br /><br /><br />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Código
                                                @Html.TextBoxFor(m => m.PROD_CD_CODIGO, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                @Html.ValidationMessageFor(m => m.PROD_CD_CODIGO, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Código de Barras (Número)
                                                @Html.TextBoxFor(m => m.PROD_NR_BARCODE, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_NR_BARCODE, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-7 col-md-7 col-xs-12">
                                                Nome*
                                                @Html.TextBoxFor(m => m.PROD_NM_NOME, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_NM_NOME, "", new { @style = "color:red" })
                                            </div>
                                        </div>
                                        <br /><br /><br />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Unidade
                                                @Html.TextBoxFor(m => m.UNIDADE.UNID_NM_NOME, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.UNID_CD_ID, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Preço Venda
                                                @Html.TextBoxFor(m => m.PROD_VL_PRECO_VENDA, "{0:n2}", new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_VL_PRECO_VENDA, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Preço Promoção
                                                @Html.TextBoxFor(m => m.PROD_VL_PRECO_PROMOCAO, "{0:n2}", new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_VL_PRECO_PROMOCAO, "", new { @style = "color:red" })
                                            </div>
                                        </div>
                                        <br /><br /><br />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                Descrição
                                                @Html.TextAreaFor(m => m.PROD_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_DS_DESCRICAO, "", new { @style = "color:red" })
                                            </div>
                                        </div>
                                        <br /><br /><br /><br /><br /><br /><br />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                Informações do Produto
                                                @Html.TextAreaFor(m => m.PROD_DS_INFORMACOES, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_DS_INFORMACOES, "", new { @style = "color:red" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Estoque*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                @Html.HiddenFor(x => x.PROD_QN_ESTOQUE)
                                                @Html.HiddenFor(x => x.PROD_QN_QUANTIDADE_INICIAL)
                                                Estoque Máximo
                                                @Html.TextBoxFor(m => m.PROD_QN_QUANTIDADE_MAXIMA, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_QN_QUANTIDADE_MAXIMA, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Estoque Mínimo
                                                @Html.TextBoxFor(m => m.PROD_QN_QUANTIDADE_MINIMA, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_QN_QUANTIDADE_MINIMA, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Reserva de Estoque
                                                @Html.TextBoxFor(m => m.PROD_QN_RESERVA_ESTOQUE, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_QN_RESERVA_ESTOQUE, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Data Último Movimento
                                                @Html.TextBoxFor(m => m.PROD_DT_ULTIMA_MOVIMENTACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                @Html.ValidationMessageFor(m => m.PROD_DT_ULTIMA_MOVIMENTACAO, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Aviso de Limite Mínimo
                                                <br />
                                                @Html.CheckBoxFor(m => m.AvisaMinima, new { @class = "checkbox i-checks" })
                                                @Html.ValidationMessageFor(m => m.AvisaMinima, "", new { @style = "color:red" })
                                            </div>
                                        </div>

                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <hr />
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <hr />
                                                <h4>Estoque por Filial</h4>
                                                <br />
                                                @if (Model.PRODUTO_ESTOQUE_FILIAL.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Filial</th>
                                                                <th>Estoque</th>
                                                                <th>Data do último movimento</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.PRODUTO_ESTOQUE_FILIAL))
                                                            {
                                                                <tr>
                                                                    <td>@cond.FILIAL.FILI_NM_NOME</td>
                                                                    <td>@cond.PREF_QN_ESTOQUE</td>
                                                                    <td>@cond.PREF_DT_ULTIMO_MOVIMENTO.Value.ToShortDateString()</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <hr />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Fornecedores</h4>
                                                <br />
                                                @if (Model.PRODUTO_FORNECEDOR.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>E-Mail</th>
                                                                <th>Telefone</th>
                                                                <th>Ativo</th>
                                                                <th class="td-one-action">Ações</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.PRODUTO_FORNECEDOR))
                                                            {
                                                                <tr>
                                                                    <td>@cond.FORNECEDOR.FORN_NM_NOME</td>
                                                                    <td>@cond.FORNECEDOR.FORN_NM_EMAIL</td>
                                                                    <td>@cond.FORNECEDOR.FORN_NM_TELEFONES</td>
                                                                    @if (cond.PRFO_CD_ID == 1)
                                                                    {
                                                                        <td>Sim</td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td>Não</td>
                                                                    }
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Ficha Técnica*@
                            @if (Model.Composto)
                            {
                                <div id="tab-13" class="tab-pane">
                                    <div class="panel-body">
                                        @if (Model.FICHA_TECNICA.Count != 0)
                                        {
                                            <div class="row">
                                                <div class="form-group">
                                                    @if (!String.IsNullOrEmpty(Model.FICHA_TECNICA.FirstOrDefault().FITE_AQ_APRESENTACAO))
                                                    {
                                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                                            <br />
                                                            <img src="@Url.Content(Model.FICHA_TECNICA.FirstOrDefault().FITE_AQ_APRESENTACAO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                                            <br />
                                                            <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                        </div>
                                                    }
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        <br />
                                                        Nome da Ficha Técnica
                                                        @Html.TextBoxFor(m => m.FICHA_TECNICA.FirstOrDefault().FITE_NM_NOME, new { @class = "form-control", @style = "color:green", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        <br />
                                                        Mode de Preparo
                                                        @Html.TextAreaFor(m => m.FICHA_TECNICA.FirstOrDefault().FITE_S_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        <br />
                                                        Mode de Apresentação
                                                        @Html.TextAreaFor(m => m.FICHA_TECNICA.FirstOrDefault().FITE_DS_APRESENTACAO, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (Model.FICHA_TECNICA.Count > 0)
                                        {
                                            <div class="row">
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        <hr />
                                                        <h4>Componentes do Produto</h4>
                                                        <br />
                                                        @if (Model.FICHA_TECNICA.FirstOrDefault().FICHA_TECNICA_DETALHE.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Insumo</th>
                                                                        <th>Unidade</th>
                                                                        <th>Quantidade</th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.FICHA_TECNICA.FirstOrDefault().FICHA_TECNICA_DETALHE))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.MATERIA_PRIMA.MAPR_NM_NOME</td>
                                                                            <td>@cond.MATERIA_PRIMA.UNIDADE.UNID_NM_NOME</td>
                                                                            <td>@cond.FITD_QN_QUANTIDADE</td>
                                                                            @if (!String.IsNullOrEmpty(cond.MATERIA_PRIMA.MAPR_AQ_FOTO))
                                                                            {
                                                                                <td><img src="@Url.Content(cond.MATERIA_PRIMA.MAPR_AQ_FOTO)" style="width: auto; height: auto; max-height: 55px; max-width: 45px;"></td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td><img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 55px; max-width: 45px;"></td>
                                                                            }
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                            }


                            @*Varejo*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Marca
                                                @Html.TextBoxFor(m => m.PROD_NM_MARCA, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_NM_MARCA, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Modelo
                                                @Html.TextBoxFor(m => m.PROD_NM_MODELO, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_NM_MODELO, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Fabricante
                                                @Html.TextBoxFor(m => m.PROD_NM_FABRICANTE, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_NM_FABRICANTE, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Referencia Fabricante
                                                @Html.TextBoxFor(m => m.PROD_NM_REFERENCIA_FABRICANTE, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_NM_REFERENCIA_FABRICANTE, "", new { @style = "color:red" })
                                            </div>
                                        </div>
                                        <br /><br /><br />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Referência
                                                @Html.TextBoxFor(m => m.PROD_NR_REFERENCIA, new { @class = "form-control", @style = "color:green", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.PROD_NR_REFERENCIA, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Garantia (dias)
                                                @Html.TextBoxFor(m => m.Garantia, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.Garantia, "", new { @style = "color:red" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <hr />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Grade</h4>
                                                <br />
                                                @if (Model.PRODUTO_GRADE.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Cor</th>
                                                                <th>Tamanho</th>
                                                                <th>Quantidade</th>
                                                                <th>Ativo</th>
                                                                <th class="td-one-action">Ações</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.PRODUTO_GRADE.OrderBy(a => a.PRGR_NM_COR).ThenBy(a => a.PRGR_NM_TAMANHO)))
                                                            {
                                                                <tr>
                                                                    <td>@cond.PRGR_NM_COR</td>
                                                                    <td>@cond.PRGR_NM_TAMANHO</td>
                                                                    <td>@cond.PRGR_QN_QUANTIDADE</td>
                                                                    @if (cond.PRGR_IN_ATIVO == 1)
                                                                    {
                                                                        <td>Sim</td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td>Não</td>
                                                                    }
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Food Service*@
                            <div id="tab-4" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Balança PDV
                                                <br />
                                                @Html.CheckBoxFor(m => m.BalancaPDV, new { @class = "checkbox i-checks" })
