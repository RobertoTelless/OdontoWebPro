@using Presentation.Extensions
@using CrossCutting;
@using EntitiesServices.Work_Classes;
@model SystemBRPresentation.ViewModels.MatrizViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            @*Endereços*@
            @using (Html.BeginForm("PesquisaCEP", "MatrizFilial", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
            {
                <div class="row">
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                        <div class="col-lg-3 col-md-3 col-xs-12">                                
                            <h4>Endereço</h4>
                            <br />
                            CEP para Pesquisar
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.MATR_NR_CEP_BUSCA, new { @class = "form-control", @id = "cep", autofocus = true })
                                @Html.ValidationMessageFor(m => m.MATR_NR_CEP_BUSCA, "", new { @style = "color:red" })
                                <span class="input-group-btn">
                                    @Html.ButtonActionSubmit(text: "Pesquisar CEP", htmlAttributes: new { id = "basictoast" })
                                </span>
                            </div>
                        </div>                                   
                    </div>
                </div>
            }

            @using (Html.BeginForm("BuscarCEPMatriz", "MatrizFilial", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
            {
                <div class="row">
                    <hr />
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">              
                        <div class="col-lg-4 col-md-4 col-xs-12">
                            Endereço
                            @Html.TextBoxFor(m => m.MATR_NM_ENDERECO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                        </div>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Bairro
                            @Html.TextBoxFor(m => m.MATR_NM_BAIRRO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                        </div>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Cidade
                            @Html.TextBoxFor(m => m.MATR_NM_CIDADE, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                        </div>
                        <div class="col-lg-2 col-md-2 col-xs-12">
                            UF
                            @Html.TextBoxFor(m => m.MATR_SG_UF, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                        </div>
                        <div class="col-lg-2 col-md-2 col-xs-12">
                            CEP
                            @Html.TextBoxFor(m => m.MATR_NR_CEP, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                        </div>
                    </div>
                </div>                                        
                <div class="form-group">
                    @Html.ButtonActionSubmit(text: "Confirma endereço", htmlAttributes: new { id = "basictoast1" })
                    @Html.ButtonLinkIndex(text: "Cancelar", action: "MontarTelaMatriz", controller: "MatrizFilial")
                </div>
            }
         </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/toastrStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/toastr")
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/sparkline")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Excel' },
                    { extend: 'pdf', title: 'PDF' },

                    {
                        extend: 'print',
                        customize: function (win) {
