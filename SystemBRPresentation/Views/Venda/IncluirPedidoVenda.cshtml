                                                        @Html.ValidationMessageFor(m => m.PEVE_NM_NOME, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data*
                                                        @Html.TextBoxFor(m => m.PEVE_DT_DATA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
