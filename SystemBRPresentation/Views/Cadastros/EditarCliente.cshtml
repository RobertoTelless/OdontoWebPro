                                                    @Html.TextBoxFor(m => m.CLIE_NR_SUFRAMA, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.CLIE_NR_SUFRAMA, "", new { @style = "color:red" })
