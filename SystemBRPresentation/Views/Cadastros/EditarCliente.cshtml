                                                            @Html.ButtonLinkIndex(text: "+", action: "IncluirTipoPessoa", controller: "TabelasAuxiliares", buttonClass: "white", routeValues: new { id = 3 })
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Filial
                                                    @Html.DropDownListFor(m => m.FILI_CD_ID, (SelectList)ViewBag.Filiais, "Selecionar", new { @class = "form-control", autofocus = true  })                            
