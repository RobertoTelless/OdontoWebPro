                                                    <div class="input-group">
                                                        @Html.DropDownListFor(m => m.RETR_CD_ID, (SelectList)ViewBag.Regimes, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                                        @Html.ValidationMessageFor(m => m.RETR_CD_ID, "", new { @style = "color:red" })
                                                        <span class="input-group-btn">
                                                            @Html.ButtonLinkIndex(text: "+", action: "IncluirRegimeTributario", controller: "TabelasAuxiliares", buttonClass: "white", routeValues: new { id = 3 })
