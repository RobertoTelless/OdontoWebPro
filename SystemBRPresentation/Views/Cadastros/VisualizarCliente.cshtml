                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Telefone
                                                    @Html.TextBoxFor(m => m.CLIE_NR_TELEFONES, new { @class = "form-control", @readonly="readonly",autofocus = true })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Celular
                                                    @Html.TextBoxFor(m => m.CLIE_NR_CELULAR, new { @class = "form-control", @readonly="readonly",autofocus = true })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Telefone Adicional
                                                    @Html.TextBoxFor(m => m.CLIE_NR_TELEFONE_ADICIONAL, new { @class = "form-control",@readonly="readonly", autofocus = true })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    E-Mail
                                                    @Html.TextBoxFor(m => m.CLIE_NM_EMAIL, new { @class = "form-control", @readonly="readonly",autofocus = true })
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12"> 
                                            <h4>Anexos do Cliente</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileCliente", "Cadastros", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.CLIENTE_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.CLIENTE_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.CLAN_NM_TITULO</td>
                                                                            <td>@cond.CLAN_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.CLAN_IN_TIPO == 1)
	                                                                        {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.CLAN_IN_TIPO == 1)
	                                                                            {
                                                                                    @Html.TableLinkDetails(cond.CLAN_CD_ID, "VerAnexoCliente","fa-camera", "Visualizar")
	                                                                            }
                                                                                @Html.TableLinkDetails(cond.CLAN_CD_ID, "DownloadCliente","fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

