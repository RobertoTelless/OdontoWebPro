                                                    @Html.ValidationMessageFor(m => m.MAPR_TX_OBSERVACOES, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <br />
                                    @Html.ButtonActionSubmit(text: "Confirma inclusão de Insumo", htmlAttributes: new { id = "basictoast" })
                                    @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBaseMateria", controller: "Cadastros")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
