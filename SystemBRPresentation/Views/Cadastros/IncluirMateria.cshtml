                                                        @Html.DropDownListFor(m => m.CAMA_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                                        @Html.ValidationMessageFor(m => m.CAMA_CD_ID, "", new { @style = "color:red" })
                                                        <span class="input-group-btn">
                                                            @Html.ButtonLinkIndex(text: "+", action: "IncluirCategoriaMateria", controller: "TabelasAuxiliares", buttonClass: "white", routeValues: new { id = 2 })
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Subcategoria
                                                    <div class="input-group">
                                                        @Html.DropDownListFor(m => m.SCMA_CD_ID, (SelectList)ViewBag.Sub, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                                        @Html.ValidationMessageFor(m => m.SCMA_CD_ID, "", new { @style = "color:red" })
                                                        <span class="input-group-btn">
                                                            @Html.ButtonLinkIndex(text: "+", action: "IncluirSubCategoriaMateria", controller: "TabelasAuxiliares", buttonClass: "white", routeValues: new { id = 2 })
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Código*
