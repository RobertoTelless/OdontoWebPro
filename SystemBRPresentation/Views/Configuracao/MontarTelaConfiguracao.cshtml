@using Presentation.Extensions
@using CrossCutting;
@model EntitiesServices.Model.CONFIGURACAO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Configurações</h3> 
    </div>

    @using (Html.BeginForm("ConfigurarSistema", "Administracao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Configuração - Sistema</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>  
                <div class="ibox-content">
                    <div class="row">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Falhas / Dia
                                @Html.EditorFor(m => m.CONF_NR_FALHAS_DIA, new { @class = "form-control touchspin3", autofocus = true, name="demo3" })
                                @Html.ValidationMessageFor(model => model.CONF_NR_FALHAS_DIA, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Hora Inicial - Agenda 
                                <div class="input-group clockpicker" data-autoclose="true">
                                    @Html.EditorFor(m => m.CONF_TM_INICIO_AGENDA, new { @class = "form-control", autofocus = true })
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.CONF_TM_INICIO_AGENDA, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Hora Final - Agenda
                                <div class="input-group clockpicker" data-autoclose="true">
                                    @Html.EditorFor(m => m.CONF_TM_FINAL_AGENDA, new { @class = "form-control", autofocus = true })
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.CONF_TM_FINAL_AGENDA, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Configuração - E-Mail</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>  
                <div class="ibox-content">
                    <div class="row">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Host - SMTP
                                @Html.TextBoxFor(m => m.CONF_NM_HOST_SMTP, new { @class = "form-control", autofocus = true })
                                @Html.ValidationMessageFor(model => model.CONF_NM_HOST_SMTP, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Porta - SMTP 
                                @Html.TextBoxFor(m => m.CONF_NM_PORTA_SMTP, new { @class = "form-control", autofocus = true })
                                @Html.ValidationMessageFor(model => model.CONF_NM_PORTA_SMTP, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-4 col-md-4 col-xs-12">
                                E-Mail Emissor
                                @Html.TextBoxFor(m => m.CONF_NM_EMAIL_EMISSOR, new { @class = "form-control", autofocus = true })
                                @Html.ValidationMessageFor(model => model.CONF_NM_SENHA_EMISSOR, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Senha E-Mail Emissor
                                @Html.TextBoxFor(m => m.CONF_NM_SENHA_EMISSOR, new { @class = "form-control", autofocus = true , @type = "password" })
                                @Html.ValidationMessageFor(model => model.CONF_NM_SENHA_EMISSOR, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
            <div class="col-lg-12 col-md-12 col-xs-12">
                @Html.ButtonActionSubmit(text: "Alterar Configuração")
                @Html.ButtonLinkIndex(text: "Voltar", controller: "Configuracao", action: "Voltar")
            </div>
        </div>
    }
</div>

