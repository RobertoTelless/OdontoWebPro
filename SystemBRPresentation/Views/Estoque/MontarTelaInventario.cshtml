@using Presentation.Extensions
@using CrossCutting;
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Insumos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Inventário</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                <br />
                                <span class="btn btn-success" onclick="MostraModal()">Novo Filtro</span>
                                @Html.ButtonLinkIndex(text: "Voltar", controller: "Estoque", action: "Voltar")
                                @Html.ButtonLinkIndex(text: "Movimentações de Entrada", controller: "Estoque", action: "MontarTelaMovimentacaoEntrada")
                                @Html.ButtonLinkIndex(text: "Movimentações de Saída", controller: "Estoque", action: "MontarTelaMovimentacaoSaida")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    @if (ViewBag.IsProdIns == 1)
                    {
                        <h5>Produtos</h5>
                    }
                    else
                    {
                        <h5>Insumos</h5>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li><a data-toggle="tab" href="#tab-2">Justificativa</a></li>
                        </ul>

                        <div class="tab-content">
                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @if (ViewBag.ListaProd == null && ViewBag.ListaIns == null)
                                    {
                                        <div class="modal fade" id="filtroModal" tabindex="-1" role="dialog" aria-labelledby="filtroModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-lg" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="filtroModalLabel">Filtrar seleção</h5>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="container-fluid" id="alert" style="display: none;">
                                                            <div class="row">
                                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                                    <div class="alert alert-danger" role="alert"></div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="container-fluid">
                                                            <div class="row">
                                                                <div class="col-lg-6 col-md-6 col-xs-12">
                                                                    Produto/Insumo
                                                                    @Html.DropDownList("FiltroProdutoMateria", (SelectList)ViewBag.ProdutoInsumo, "Selecionar", new { @class = "form-control", id = "filtroPM", onchange = "FiltrarModal($(this).val())" })
                                                                    <br />
                                                                </div>
                                                            </div>
                                                        </div>

                                                        @*Filtro Produto*@
                                                        <div class="container-fluid" id="prodContainer" style="display: none;">
                                                            <div class="row">
                                                                <h3>Produto</h3>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                                    Código de Barras
                                                                    <input type="text" class="form-control" id="cdBarras" />
                                                                </div>
                                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                                    Código do Produto
                                                                    <input type="text" class="form-control" id="cdProd" />
                                                                </div>
                                                                @if (ViewBag.PerfilUsu != 1 && ViewBag.PerfilUsu != 2)
                                                                {
                                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                                        Filial
                                                                        @Html.TextBox("Filial", (String)ViewBag.FilialUsuario, new { @class = "form-control", @readonly = "readonly", id = "filialProd" })
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                                        Filial
                                                                        @Html.DropDownList("Filiais", (SelectList)ViewBag.Filiais, "Selecionar", new { @class = "form-control", id = "filialProd" })
                                                                    </div>
                                                                }
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                                    Categoria do Produto
                                                                    @Html.DropDownList("Categoria", (SelectList)ViewBag.CatProd, "Selecionar", new { @class = "form-control", id = "catProd" })
                                                                </div>
                                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                                    Subcategoria do Produto
                                                                    @Html.DropDownList("Subcategoria", (SelectList)ViewBag.SubCatProd, "Selecionar", new { @class = "form-control", id = "subProd" })
                                                                </div>
                                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                                    Nome
                                                                    <input type="text" class="form-control" id="nomeProd" />
                                                                </div>
                                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                                    Marca
                                                                    <input type="text" class="form-control" id="marcaProd" />
                                                                </div>
                                                            </div>
                                                        </div>

                                                        @*Filtro Insumo*@
                                                        <div class="container-fluid" id="insContainer" style="display: none;">
                                                            <div class="row">
                                                                <h3>Insumo</h3>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                                    Categoria do Insumo
                                                                    @Html.DropDownList("Categoria", (SelectList)ViewBag.CatIns, "Selecionar", new { @class = "form-control", autofocus = true, id = "catIns" })
                                                                </div>
                                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                                    Subcategoria do Insumo
                                                                    @Html.DropDownList("Subcategoria", (SelectList)ViewBag.SubCatIns, "Selecionar", new { @class = "form-control", autofocus = true, id = "subIns" })
                                                                </div>
                                                                @if (ViewBag.PerfilUsu != 1 && ViewBag.PerfilUsu != 2)
                                                                {
                                                                    <div class="col-lg-4 col-md-4 col-xs-12">
                                                                        Filial
                                                                        @Html.TextBox("Filial", (String)ViewBag.FilialUsuario, new { @class = "form-control", @readonly = "readonly", id = "filialIns" })
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="col-lg-4 col-md-4 col-xs-12">
                                                                        Filial
                                                                        @Html.DropDownList("Filiais", (SelectList)ViewBag.Filiais, "Selecionar", new { @class = "form-control", id = "filialIns" })
                                                                    </div>
                                                                }
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                                    Nome
                                                                    <input class="form-control" type="text" id="nomeIns" />
                                                                </div>
                                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                                    Descrição
                                                                    <input class="form-control" type="text" id="descIns" />
                                                                </div>
                                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                                    Código
                                                                    <input class="form-control" type="text" id="cdIns" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-primary" onclick="Filtrar()">Filtrar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        if (ViewBag.IsProdIns == 1)
                                        {
                                            if ((ViewBag.ListaProd as List<EntitiesServices.Model.PRODUTO>).Count > 0)
                                            {
                                                <div class="row">
                                                    <table id="tblProd" class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>Categoria</th>
                                                                <th>Subcategoria</th>
                                                                <th>Quantidade em Estoque</th>
                                                                <th>Quantidade Alterada</th>
                                                                <th>Data da ultima movimentação</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (ViewBag.ListaProd as List<EntitiesServices.Model.PRODUTO>))
                                                            {
                                                                if (cond.UNIDADE != null)
                                                                {
                                                                    <tr>
                                                                        <td style="display: none;"><input type="hidden" name="id" value="@cond.PROD_CD_ID" /></td>
                                                                        <td>@cond.PROD_NM_NOME</td>
                                                                        <td>@cond.CATEGORIA_PRODUTO.CAPR_NM_NOME</td>
                                                                        <td>@cond.SUBCATEGORIA_PRODUTO.SCPR_NM_NOME</td>
                                                                        <td>@cond.PROD_QN_ESTOQUE</td>
                                                                        <td><input class="form-control" name="qtde" type="text" value="0" /></td>
                                                                        <td>@cond.PROD_DT_ULTIMA_MOVIMENTACAO</td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="row">
                                                    <br />
                                                    <span class="btn btn-success btn-sm" onclick="AtualizaEstoqueProd()">Confirmar</span>
                                                    @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaInventario", controller: "Estoque", buttonClass: "warning")
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            if ((ViewBag.ListaIns as List<EntitiesServices.Model.MATERIA_PRIMA>).Count > 0)
                                            {
                                                <div class="row">
                                                    <table id="tblIns" class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>Categoria</th>
                                                                <th>Subcategoria</th>
                                                                <th>Quantidade em Estoque</th>
                                                                <th>Quantidade Alterada</th>
                                                                <th>Data da ultima movimentação</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (ViewBag.ListaIns as List<EntitiesServices.Model.MATERIA_PRIMA>))
                                                            {
                                                                if (cond.UNIDADE != null)
                                                                {
                                                                    <tr>
                                                                        <td style="display: none;"><input type="hidden" name="id" value="@cond.MAPR_CD_ID" /></td>
                                                                        <td>@cond.MAPR_NM_NOME</td>
                                                                        <td>@cond.CATEGORIA_MATERIA.CAMA_NM_NOME</td>
                                                                        <td>@(cond.SUBCATEGORIA_MATERIA == null ? "-" : cond.SUBCATEGORIA_MATERIA.SCMP_NM_NOME)</td>
                                                                        <td>@cond.MAPR_QN_ESTOQUE</td>
                                                                        <td><input class="form-control" name="qtde" type="text" value="0" /></td>
                                                                        <td>@cond.MAPR_DT_ULTIMA_MOVIMENTACAO</td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="row">
                                                    <br />
                                                    <span class="btn btn-success btn-sm" onclick="AtualizaEstoqueIns()">Confirmar</span>
                                                    @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaInventario", controller: "Estoque", buttonClass: "warning")
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>

                            <div id="tab-2" class="tab-pane">
                                @*Justificativa*@
                                <div class="panel-body">
                                    <div class="form-group" style="margin-left: -15px; margin-right: -15px">
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            Justificativa
                                            <textarea id="jus" class="form-control" style="width: 100%; height: 100px;"></textarea>
                                        </div>
                                        @if (ViewBag.IsProdIns == 1)
                                        {
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-xs-12" style="margin-left: 15px;">
                                                    <br />
                                                    <span class="btn btn-success btn-sm" onclick="AtualizaEstoqueProd()">Confirmar</span>
                                                    @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaInventario", controller: "Estoque", buttonClass: "warning")
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-xs-12" style="margin-left: 15px;">
                                                    <br />
                                                    <span class="btn btn-success btn-sm" onclick="AtualizaEstoqueIns()">Confirmar</span>
                                                    @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaInventario", controller: "Estoque", buttonClass: "warning")
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>

    <script>
        $('#filtroModal').modal({
            backdrop: 'static'
        });
        $('#filtroModal').modal('show');

        function FiltrarModal(val) {
            if (val == 1) {
                $('#prodContainer').show();
                $('#insContainer').hide();
            } else {
                $('#insContainer').show();
                $('#prodContainer').hide();
            }
        }

        function Filtrar() {
            var pm = $('#filtroPM').val();

            var data = {}

            if (pm == 1) {
                var item = {
                    "CAPR_CD_ID": $('#catProd').val()
                    , "PROD_CD_CODIGO": $('#cdProd').val()
                    , "PROD_NM_MARCA": $('#marcaProd').val()
                    , "PROD_NM_NOME": $('#nomeProd').val()
                    , "PROD_NR_BARCODE": $('#cdBarras').val()
                    , "SCPR_CD_ID": $('#subProd').val()
                    , "FILI_CD_ID": $('#filialProd').val() == "" ? null : $('#filialProd').val()
                }

                data = {
                    prod: item
                    , ins: null
                }
            } else {
                var item = {
                    "CAMA_CD_ID": $('#catIns').val()
                    , "SCMP_CD_ID": $('#subIns').val()
                    , "FILI_CD_ID": $('#filialIns').val() == "" ? null : $('#filialIns').val()
                    , "MAPR_NM_NOME": $('#nomeIns').val()
                    , "MAPR_DS_DESCRICAO": $('#descIns').val()
                    , "MAPR_CD_CODIGO": $('#cdIns').val()
                }

                data = {
                    prod: null
                    , ins: item
                }
            }

            $.ajax({
                url: '../Estoque/FiltrarInventario'
                , type: 'POST'
                , data: data
                , success: function (r) {
                    console.log(r);
                    if (r.url != null) {
                        window.open(r.url, '_self');
                    } else {
                        //if (($('#filtroModal').data('bs.modal') || { isShown: false }).isShown) {
                        //    $('#alert').find('.alert').html(r.error);
                        //    $('#alert').show();
                        //} else {
                        //    $('#alertMain').find('.alert').html(r.error);
                        //    $('#alertMain').show();
                        //}
                        $('#alert').find('.alert').html(r.error);
                        $('#alert').show();
                    }
                }
            });
        }

        function AtualizaEstoqueProd() {
            var count = 0;
            var json = [];

            $('table#tblProd > tbody > tr').each(function (i, e) {
                var id = $(e).find('input[name="id"]').val();
                var qtde = $(e).find('input[name="qtde"]').val()

                if (qtde > 0) {
                    json.push({
                        "id": id
                        , "qtde": qtde
                    });
                    count++;
                }
            });

            var data = {
                grid: JSON.stringify(json)
                , tipo: 'PROD'
                , justificativa: $('#jus').val()
            }

            $.ajax({
                url: '../Estoque/IncluirMovimentacaoEstoque'
                , type: 'POST'
                , data: data
                , success: function (r) {
                    var stringModal = '<div class="modal" tabindex="-1" role="dialog">'
                        + '<div class="modal-dialog" role="document">'
                        + '<div class="modal-content">'
                        + '<div class="modal-header">'
                        + '<h5 class="modal-title">Produtos Alterados</h5>'
                        + '</div>'
                        + '<div class="modal-body">'
                        + '<p>Foram alterados ' + count + ' produtos.</p>'
                        + '</div>'
                        + '<div class="modal-footer">'
                        + '<button type="button" class="btn btn-primary" onclick="window.open(\'../Estoque/MontarTelaInventario\', \'_self\')">Confirmar</button>'
                        + '</div>'
                        + '</div>'
                        + '</div>'
                        + '</div>';

                    $('#modalContainer').append(stringModal);

                    $('.modal').modal('show');
                }
            });
        }

        function AtualizaEstoqueIns() {
            var json = [];

            $('table#tblIns > tbody > tr').each(function (i, e) {
                var id = $(e).find('input[name="id"]').val();
                var qtde = $(e).find('input[name="qtde"]').val()

                if (qtde > 0) {
                    json.push({
                        "id": id
                        , "qtde": qtde
                    });
                }
            });

            var data = {
                grid: JSON.stringify(json)
                , tipo: 'INS'
                , justificativa: $('#jus').val()
            }

            console.log(json);

            $.ajax({
                url: '../Estoque/IncluirMovimentacaoEstoque'
                , type: 'POST'
                , data: data
                , success: function (r) {
                    var stringModal = '<div class="modal" tabindex="-1" role="dialog">'
                        + '<div class="modal-dialog" role="document">'
                        + '<div class="modal-content">'
                        + '<div class="modal-header">'
                        + '<h5 class="modal-title">Insumos Alterados</h5>'
                        + '</div>'
                        + '<div class="modal-body">'
                        + '<p>Foram alterados ' + count + ' insumos.</p>'
                        + '</div>'
                        + '<div class="modal-footer">'
                        + '<button type="button" class="btn btn-primary" onclick="window.open(\'../Estoque/MontarTelaInventario\', \'_self\')">Confirmar</button>'
                        + '</div>'
                        + '</div>'
                        + '</div>'
                        + '</div>';

                    $('#modalContainer').append(stringModal);

                    $('.modal').modal('show');
                }
            });
        }

        function MostraModal() {
            $.ajax({
                url: '../Estoque/LimparListas'
                , type: 'POST'
            });

            window.location.reload();
        }
    </script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });



        });

    </script>
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

