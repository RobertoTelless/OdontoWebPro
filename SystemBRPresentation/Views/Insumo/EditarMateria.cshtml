@using Presentation.Extensions
@model SystemBRPresentation.ViewModels.MateriaPrimaViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Insumos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaMateria", "Insumo")">Insumos</a>
            </li>
            <li class="active">
                <strong>Insumos - Consulta & Edição</strong>
            </li>
        </ol>
        <br />
    </div>

    @*TABS - PRINCIPAL*@
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Insumos - Edição</h5> &nbsp;&nbsp;&nbsp;
                    @Html.ButtonLinkIndex(text: "Duplicar o Insumo", action: "ClonarMateria", controller: "Insumo", buttonClass: "success demo2", routeValues: new { id = Model.MAPR_CD_ID })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="form-group">
                        @Html.ButtonLinkIndex(text: "Gerar Relatório", action: "GerarRelatorioDetalhe", controller: "Insumo")
                        @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBaseMateria", controller: "Insumo")
                    </div>
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Estoque</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Imagens & Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Custos & Preços</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-5">Observações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-6">Resumos</a></li>
                        </ul>
                        <div class="tab-content">

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarMateria", "Insumo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group">
                                                @if (!String.IsNullOrEmpty(Model.MAPR_AQ_FOTO))
                                                {
                                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                                        <br />
                                                        <img src="@Url.Content(Model.MAPR_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.MAPR_NM_NOME', '@Url.Content(Model.MAPR_AQ_FOTO)')">
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                                        <br />
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.MAPR_NM_NOME', '~/Images/gallery/10s.jpg')">
                                                    </div>
                                                }
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.FILI_CD_ID)
                                                    @Html.HiddenFor(m => m.MAPR_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.MAPR_CD_ID)
                                                    @Html.HiddenFor(m => m.MAPR_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.MAPR_DT_ULTIMA_MOVIMENTACAO)
                                                    @Html.HiddenFor(m => m.MAPR_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.MAPR_IN_AVISA_MINIMO)
                                                    @Html.HiddenFor(m => m.MAPR_NM_REFERENCIA)
                                                    @Html.HiddenFor(m => m.MAPR_QN_ESTOQUE)
                                                    @Html.HiddenFor(m => m.MAPR_QN_ESTOQUE_INICIAL)
                                                    @Html.HiddenFor(m => m.MAPR_QN_ESTOQUE_MAXIMO)
                                                    @Html.HiddenFor(m => m.MAPR_QN_ESTOQUE_MINIMO)
                                                    @Html.HiddenFor(m => m.MAPR_QN_QUANTIDADE_INICIAL)
                                                    @Html.HiddenFor(m => m.MAPR_QN_QUANTIDADE_M)
                                                    @Html.HiddenFor(m => m.MAPR_QN_RESERVA_ESTOQUE)
                                                    @Html.HiddenFor(m => m.MAPR_TX_OBSERVACOES)
                                                    @Html.HiddenFor(m => m.MATR_CD_ID)
                                                    @Html.HiddenFor(m => m.SCMA_CD_ID)
                                                    @Html.HiddenFor(m => m.MAPR_CD_CODIGO)
                                                    Categoria*
                                                    @Html.DropDownListFor(m => m.CAMA_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true, onchange = "FiltrarSubCategoriaMateria($(this).val())" })
                                                    @Html.ValidationMessageFor(m => m.CAMA_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Subcategoria
                                                    @Html.DropDownListFor(m => m.SCMP_CD_ID, (SelectList)ViewBag.Subs, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.SCMP_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            </div>

                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-7 col-md-7 col-xs-12">
                                                    Código
                                                    @Html.TextBoxFor(m => m.MAPR_CD_CODIGO, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                </div>
                                                <div class="col-lg-7 col-md-7 col-xs-12">
                                                    Nome*
                                                    @Html.TextBoxFor(m => m.MAPR_NM_NOME, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_NM_NOME, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Unidade*
                                                    @Html.DropDownListFor(m => m.UNID_CD_ID, (SelectList)ViewBag.Unidades, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.UNID_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            </div>

                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data de Validade
                                                    @Html.TextBoxFor(m => m.MAPR_DT_VALIDADE, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_DT_VALIDADE, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Perda no Processo(%)
                                                    @Html.TextBoxFor(m => m.MAPR_PERDA_PROCESSAMENTO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_PERDA_PROCESSAMENTO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Fator de Conversão
                                                    @Html.TextBoxFor(m => m.MAPR_NR_FATOR_CONVERSAO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_NR_FATOR_CONVERSAO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Preço de Custo
                                                    @Html.TextBoxFor(m => m.MAPR_VL_CUSTO, "{0:n2}", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_VL_CUSTO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Descrição
                                                    @Html.TextAreaFor(m => m.MAPR_DS_DESCRICAO, new { @class = "form-control", style = "width: 1020px; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.MAPR_DS_DESCRICAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Insumo", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Estoque*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarMateria", "Insumo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                @Html.HiddenFor(m => m.CAMA_CD_ID)
                                                @Html.HiddenFor(m => m.FILI_CD_ID)
                                                @Html.HiddenFor(m => m.MAPR_AQ_FOTO)
                                                @Html.HiddenFor(m => m.MAPR_CD_CODIGO)
                                                @Html.HiddenFor(m => m.MAPR_CD_ID)
                                                @Html.HiddenFor(m => m.MAPR_DS_DESCRICAO)
                                                @Html.HiddenFor(m => m.MAPR_DT_CADASTRO)
                                                @Html.HiddenFor(m => m.MAPR_DT_VALIDADE)
                                                @Html.HiddenFor(m => m.MAPR_IN_ATIVO)
                                                @Html.HiddenFor(m => m.MAPR_NM_NOME)
                                                @Html.HiddenFor(m => m.MAPR_NM_REFERENCIA)
                                                @Html.HiddenFor(m => m.MAPR_NR_FATOR_CONVERSAO)
                                                @Html.HiddenFor(m => m.MAPR_PERDA_PROCESSAMENTO)
                                                @Html.HiddenFor(m => m.MAPR_QN_QUANTIDADE_INICIAL)
                                                @Html.HiddenFor(m => m.MAPR_QN_QUANTIDADE_M)
                                                @Html.HiddenFor(m => m.MAPR_TX_OBSERVACOES)
                                                @Html.HiddenFor(m => m.MAPR_VL_CUSTO)
                                                @Html.HiddenFor(m => m.MATR_CD_ID)
                                                @Html.HiddenFor(m => m.SCMA_CD_ID)
                                                @Html.HiddenFor(m => m.UNID_CD_ID)
                                                @Html.HiddenFor(m => m.MAPR_QN_ESTOQUE)
                                                @Html.HiddenFor(m => m.MAPR_QN_QUANTIDADE_INICIAL)
                                                Estoque Máximo
                                                @Html.TextBoxFor(m => m.MAPR_QN_ESTOQUE_MAXIMO, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.MAPR_QN_ESTOQUE_MAXIMO, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Estoque Mínimo
                                                @Html.TextBoxFor(m => m.MAPR_QN_QUANTIDADE_M, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.MAPR_QN_QUANTIDADE_M, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Reserva de Estoque
                                                @Html.TextBoxFor(m => m.MAPR_QN_RESERVA_ESTOQUE, new { @class = "form-control", autofocus = true })
                                                @Html.ValidationMessageFor(m => m.MAPR_QN_RESERVA_ESTOQUE, "", new { @style = "color:red" })
                                            </div>
                                        </div>

                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Data Último Movimento
                                                @Html.TextBoxFor(m => m.MAPR_DT_ULTIMA_MOVIMENTACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                @Html.ValidationMessageFor(m => m.MAPR_DT_ULTIMA_MOVIMENTACAO, "", new { @style = "color:red" })
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Aviso de Limite Mínimo
                                                <br />
                                                @Html.CheckBoxFor(m => m.AvisaMinima, new { @class = "checkbox i-checks" })
                                                @Html.ValidationMessageFor(m => m.AvisaMinima, "", new { @style = "color:red" })
                                            </div>
                                        </div>

                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Estoque por Filial</h4>
                                                <br />
                                                @if (Model.MATERIA_PRIMA_ESTOQUE_FILIAL.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Filial</th>
                                                                <th>Estoque</th>
                                                                <th>Data do último movimento</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.MATERIA_PRIMA_ESTOQUE_FILIAL))
                                                            {
                                                                <tr>
                                                                    <td>@cond.FILIAL.FILI_NM_NOME</td>
                                                                    <td>@cond.MPFE_QN_ESTOQUE</td>
                                                                    <td>@cond.MPFE_DT_ULTIMO_MOVIMENTO.ToShortDateString()</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Insumo", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    }

                                    <div class="row">
                                        <hr />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Fornecedores</h4>
                                                <br />
                                                @if (Model.MATERIA_PRIMA_FORNECEDOR.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Nome</th>
                                                                <th>E-Mail</th>
                                                                <th>Telefone</th>
                                                                <th class="td-one-action">Ações</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.MATERIA_PRIMA_FORNECEDOR))
                                                            {
                                                                <tr>
                                                                    <td>@cond.FORNECEDOR.FORN_NM_NOME</td>
                                                                    <td>@cond.FORNECEDOR.FORN_NM_EMAIL</td>
                                                                    <td>@cond.FORNECEDOR.FORN_NM_TELEFONES</td>
                                                                    <td class="td-one-action">
                                                                        @Html.TableLinkDetails(cond.MAFO_CD_ID, "EditarMateriaFornecedor", "fa-edit", "Editar/Consultar Fornecedor")
                                                                        @if (cond.MAFO_IN_ATIVO == 1)
                                                                        {
                                                                            @Html.TableLinkDetails(cond.MAFO_CD_ID, "ExcluirMateriaFornecedor", "fa-trash-o", "Desativar Fornecedor")
                                                                        }
                                                                        else
                                                                        {
                                                                            @Html.TableLinkDetails(cond.MAFO_CD_ID, "ReativarMateriaFornecedor", "fa-refresh", "Reativar Fornecedor")
                                                                        }
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Novo Fornecedor", action: "IncluirMateriaFornecedor", controller: "Insumo")
                                    </div>
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-10 col-md-10 col-xs-12">
                                            <div class="form-group">
                                                <h4>Fotografia do Insumo</h4>
                                                @using (Html.BeginForm("UploadFotoMateria", "Insumo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container3" }))
                                                {
                                                    <br />
                                                    <input type="file" accept=".jpg, .png, .jpeg, .gif|images/*" name="file" id="file" class="btn btn-sm btn-warning" />
                                                    <br />
                                                    <div class="form-group">
                                                        <input type="submit" value="Incluir Fotografia do Insumo" class="btn btn-sm btn-success" />
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    @if (!String.IsNullOrEmpty(Model.MAPR_AQ_FOTO))
                                                    {
                                                        <img src="@Url.Content(Model.MAPR_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos do Insumo</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileMateria", "Insumo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.MATERIA_PRIMA_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.MATERIA_PRIMA_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.MAPA_NM_TITULO</td>
                                                                            <td>@cond.MAPA_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.MAPA_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.MAPA_IN_TIPO == 1)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.MAPA_CD_ID, "VerAnexoMateria", "fa-camera", "Visualizar")
                                                                                }
                                                                                @Html.TableLinkDetails(cond.MAPA_CD_ID, "DownloadMateria", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <input type="file" name="file" id="file" class="btn btn-sm btn-warning" />
                                                        <br />
                                                        <div class="form-group">
                                                            <input type="submit" value="Incluir Anexo do Insumo" class="btn btn-sm btn-success" />
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Custos e Preços*@
                            <div id="tab-4" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("IncluirTabelaMateriaPrima", "Insumo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <hr />
                                            <h4>Incluir Nova Tabela</h4>
                                            <br />
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.MATR_CD_ID)
                                                    @Html.HiddenFor(m => m.AvisaMinima)
                                                    @Html.HiddenFor(m => m.CAMA_CD_ID)
                                                    @Html.HiddenFor(m => m.FICHA_TECNICA_DETALHE)
                                                    @Html.HiddenFor(m => m.ITEM_PEDIDO_COMPRA)
                                                    @Html.HiddenFor(m => m.MAPR_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.MAPR_CD_CODIGO)
                                                    @Html.HiddenFor(m => m.MAPR_CD_ID)
                                                    @Html.HiddenFor(m => m.MAPR_DS_DESCRICAO)
                                                    @Html.HiddenFor(m => m.MAPR_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.MAPR_DT_ULTIMA_MOVIMENTACAO)
                                                    @Html.HiddenFor(m => m.MAPR_DT_VALIDADE)
                                                    @Html.HiddenFor(m => m.MAPR_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.MAPR_IN_AVISA_MINIMO)
                                                    @Html.HiddenFor(m => m.MAPR_NM_NOME)
                                                    @Html.HiddenFor(m => m.MAPR_NM_REFERENCIA)
