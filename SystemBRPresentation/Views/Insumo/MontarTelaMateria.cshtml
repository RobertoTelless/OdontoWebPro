@using Presentation.Extensions
@using CrossCutting;
@model EntitiesServices.Model.MATERIA_PRIMA
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Insumos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Insumos</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Insumos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Materias</h1>
                    <div class="stat-percent font-bold text-navy">32% <i class="fa fa-level-up"></i></div>
                    <small>Insumos Cadastrados</small>
                    <br />
                    <br />
                    <br />
                    <br />
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Insumos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.PontoPedido</h1>
                    <div class="stat-percent font-bold text-navy">22% <i class="fa fa-level-up"></i></div>
                    <small>Ponto de Pedido</small>
                    <br />
                    <br />
                    @Html.ButtonLinkIndex(text: "Ver", controller: "Insumo", action: "VerInsumosPontoPedido", buttonClass: "white")
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Insumos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.EstoqueZerado</h1>
                    <div class="stat-percent font-bold text-navy">22% <i class="fa fa-level-up"></i></div>
                    <small>Estoque Zerado</small>
                    <br />
                    <br />
                    @Html.ButtonLinkIndex(text: "Ver", controller: "Insumo", action: "VerInsumosEstoqueZerado", buttonClass: "white")
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                @using (Html.BeginForm("FiltrarMateria", "Insumo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Categoria do Insumo
                                    @Html.DropDownListFor(m => m.CAMA_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true, onchange = "FiltrarSubCategoriaMateria($(this).val())" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Subcategoria do Insumo
                                    @Html.DropDownListFor(m => m.SCMP_CD_ID, (SelectList)ViewBag.Subs, "Selecionar", new { @class = "form-control", autofocus = true })
                                </div>

                                @if (ViewBag.PerfilUsu != 1 && ViewBag.PerfilUsu != 2)
                                {
                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                        Filial
                                        @Html.TextBox("Filial", (String)ViewBag.FilialUsuario, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                }
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Nome
                                    @Html.TextBoxFor(m => m.MAPR_NM_NOME, new { @class = "form-control", autofocus = true })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Descrição
                                    @Html.TextBoxFor(m => m.MAPR_DS_DESCRICAO, new { @class = "form-control", autofocus = true })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Código
                                    @Html.TextBoxFor(m => m.MAPR_CD_CODIGO, new { @class = "form-control", autofocus = true })
                                </div>
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Insumo", action: "RetirarFiltroMateria")
                                @Html.ButtonLinkIndex(text: "Exibir Todos", controller: "Insumo", action: "MostrarTudoMateria")
                                @Html.ButtonLinkIndex(text: "Gerar Relatório", controller: "Insumo", action: "GerarRelatorioFiltro")
                                @Html.ButtonLinkIndex(text: "Novo Insumo", controller: "Insumo", action: "IncluirMateria")
                                @Html.ButtonLinkIndex(text: "Voltar", controller: "Insumo", action: "Voltar")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Insumos</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="row">
                        @if ((ViewBag.Listas as List<EntitiesServices.Model.MATERIA_PRIMA>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead style="background-color:lightsteelblue">
                                    <tr>
                                        <th>Categoria</th>
                                        <th>Código</th>
                                        <th>Nome</th>
                                        <th>Unidade</th>
                                        <th>Quant.Mínima</th>
                                        <th>Reserva Estoque</th>
                                        <th></th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.MATERIA_PRIMA>))
                                    {
                                        if (cond.UNIDADE != null)
                                        {
                                    <tr>
                                        <td>@cond.CATEGORIA_MATERIA.CAMA_NM_NOME</td>
                                        <td id="cd">@cond.MAPR_CD_CODIGO</td>
                                        <td>@cond.MAPR_NM_NOME</td>
                                        <td>@cond.UNIDADE.UNID_NM_NOME</td>
                                        <td>@cond.MAPR_QN_QUANTIDADE_M</td>
                                        <td>@cond.MAPR_QN_RESERVA_ESTOQUE</td>
                                        @if (!String.IsNullOrEmpty(cond.MAPR_AQ_FOTO))
                                        {
                                            <td><img src="@Url.Content(cond.MAPR_AQ_FOTO)" style="width: auto; height: auto; max-height: 55px; max-width: 45px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@cond.MAPR_NM_NOME', '@Url.Content(cond.MAPR_AQ_FOTO)')"></td>
                                        }
                                        else
                                        {
                                            <td><img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 55px; max-width: 45px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@cond.MAPR_NM_NOME', '~/Images/gallery/10s.jpg')"></td>
                                        }
                                        <td class="td-one-action">
                                            @if (ViewBag.PerfilUsu == 1 || ViewBag.PerfilUsu == 2)
                                            {
                                                @Html.TableLinkDetails(cond.MAPR_CD_ID, "EditarMateria", "fa-edit", "Editar Insumo")
                                            }

                                            @Html.TableLinkDetails(cond.MAPR_CD_ID, "ConsultarMateria", "fa-search", "Consultar Insumo")

                                            @if (cond.MAPR_IN_ATIVO == 1)
                                            {
                                                @Html.TableLinkDetails(cond.MAPR_CD_ID, "ExcluirMateria", "fa-trash-o", "Desativar Insumo")
                                            }
                                            else
                                            {
                                                @Html.TableLinkDetails(cond.MAPR_CD_ID, "ReativarMateria", "fa-refresh", "Reativar Insumo")
                                            }
                                        </td>
                                    </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });



        });

    </script>
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
        });
    </script>

    <script type="text/javascript">
        function FiltrarSubCategoriaMateria(SCMP_CD_ID) {
            var data = {
                id: SCMP_CD_ID
            }

            var objSubCatProduto = $('select#SCMA_CD_ID');

            // Requisição para o controller
            $.ajax({
                url: '../Insumo/FiltrarSubCategoriaMateria'
                , type: 'POST'
                , data: data
                , success: function (r) {
                    // Remove todos os itens da lista e adiciona o placeholder
                    objSubCatProduto.children('option').remove();
                    objSubCatProduto.append('<option>Selecionar</option>');

                    // Loop para adicionar Itens específicos à categoria
                    r.forEach(function (e) {
                        objSubCatProduto.append('<option value="' + e.SCMP_CD_ID + '">' + e.SCMP_NM_NOME + '</option>');
                    });

                    //console.log(r);
                }
            });
        }
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

