@using Presentation.Extensions
@model SystemBRPresentation.ViewModels.ContaReceberViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Contas a Receber</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCR", "Financeiro")">Contas a Receber</a>
            </li>
            <li class="active">
                <strong>Contas a Receber - Consulta</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-2">
            <div class="widget style1 yellow-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-thumbs-o-up fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        @if (Model.CARE_IN_LIQUIDADA == 0)
	                    {
                            <h3 class="font-normal">Em Aberto</h3>
                        }
                        else
                        {
                            <h3 class="font-normal">Liquidada</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
        @if (Model.CARE_NR_ATRASO > 0)
        {
            <div class="col-lg-2">
                <div class="widget style1 red-bg">
                    <div class="row vertical-align">
                        <div class="col-xs-3">
                            <i class="fa fa-thumbs-o-up fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <h3 class="font-normal">Atraso: @Model.CARE_NR_ATRASO</h3>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-thumbs-o-up fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h3 class="font-normal">Vencimento: @Model.CARE_DT_VENCIMENTO.Value.ToShortDateString()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Conta a Receber - Consulta</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Liquidação</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Pagamento Parcial</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-5">Parcelas</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-6">Observações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">Tags</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-8">Indicadores</a></li>
                        </ul>
                        <div class="tab-content">

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VerCR", "Financeiro", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                                        {
                                            <div class="alert alert-danger">
                                                <button type="button" class="close" data-dismiss="alert">×</button>
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                        }
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Cliente
                                                    @Html.TextBoxFor(m => m.CLIENTE.CLIE_NM_NOME, new { @class = "form-control", autofocus = true , @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Plano de Contas
                                                    @Html.TextBoxFor(m => m.PLANO_CONTA.PLCO_NM_NUMERO_NOME, new { @class = "form-control", autofocus = true , @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Centro de Custos
                                                    @Html.TextBoxFor(m => m.CENTRO_CUSTO.CECU_NM_NOME, new { @class = "form-control", autofocus = true , @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Conta Bancária
                                                    @Html.TextBoxFor(m => m.CONTA_BANCARIA.COBA_NM_NOME_EXIBE, new { @class = "form-control", autofocus = true , @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Responsável
                                                    @Html.TextBoxFor(m => m.COLABORADOR.COLA_NM_NOME, new { @class = "form-control", autofocus = true , @readonly="readonly" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <hr />
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Num.Documento
                                                    @Html.TextBoxFor(m => m.CARE_NR_DOCUMENTO, new { @class = "form-control", autofocus = true , @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-10 col-md-10 col-xs-12">
                                                    Histórico
                                                    @Html.TextBoxFor(m => m.CARE_DS_DESCRICAO, new { @class = "form-control", autofocus = true , @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data de Emissão
                                                    @Html.TextBoxFor(m => m.CARE_DT_LANCAMENTO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Competência
                                                    @Html.TextBoxFor(m => m.CARE_DT_COMPETENCIA, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Valor
                                                    @Html.TextBoxFor(m => m.CARE_VL_VALOR, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Favorecido
                                                    @Html.TextBoxFor(m => m.CARE_NM_FAVORECIDO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Forma de Pagamento
                                                    @Html.TextBoxFor(m => m.FORMA_PAGAMENTO.FOPA_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data de Vencimento
                                                    @Html.TextBoxFor(m => m.CARE_DT_VENCIMENTO, "{0:dd/MM/yyyy}", new { @class = "form-controlr", autofocus = true, @readonly="readonly"})
                                                </div>
                                                @if (Model.CARE_NR_ATRASO > 0)
	                                            {
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Atraso
                                                        @Html.TextBoxFor(m => m.CARE_NR_ATRASO, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                    </div>
	                                            }   
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Liquidação*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VerCR", "Financeiro", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                                        {
                                            <div class="alert alert-danger">
                                                <button type="button" class="close" data-dismiss="alert">×</button>
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                        }
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    <div class="input-group">
                                                        Liquidada
                                                        <span class="input-group-btn">
                                                            @Html.CheckBoxFor(m => m.Liquidada, new { @class = "checkbox i-checks" , @readonly="readonly"})
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data Liquidação
                                                    @Html.TextBoxFor(m => m.CARE_DT_DATA_LIQUIDACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Valor Original
                                                    @Html.TextBoxFor(m => m.CARE_VL_VALOR, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Descontos(-)
                                                    @Html.TextBoxFor(m => m.CARE_VL_DESCONTO, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Juros (+)
                                                    @Html.TextBoxFor(m => m.CARE_VL_JUROS, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Taxas (+)
                                                    @Html.TextBoxFor(m => m.CARE_VL_TAXAS, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Valor Recebido (=)
                                                    @Html.TextBoxFor(m => m.CARE_VL_VALOR_LIQUIDADO, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Parcial*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VerCR", "Financeiro", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                                        {
                                            <div class="alert alert-danger">
                                                <button type="button" class="close" data-dismiss="alert">×</button>
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                        }

                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    <div class="input-group">
                                                        Pagamento Parcial
                                                        <span class="input-group-btn">
                                                            @Html.CheckBoxFor(m => m.Parcial, new { @class = "checkbox i-checks" , @readonly="readonly"})
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Valor Recebido
                                                    @Html.TextBoxFor(m => m.CARE_VL_PARCIAL, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Saldo a Receber
                                                    @Html.TextBoxFor(m => m.CARE_VL_SALDO, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Imagens - Anexos*@
                            <div id="tab-4" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12"> 
                                            <h4>Anexos do Lançamento</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileLancamentoCR", "Financeiro", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.CONTA_RECEBER_ANEXO != null)
	                                                    {
                                                            if (Model.CONTA_RECEBER_ANEXO.Count > 0)
                                                            {
                                                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Título</th>
                                                                            <th>Data</th>
                                                                            <th>Tipo</th>
                                                                            <th class="td-one-action">Ações</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var cond in (Model.CONTA_RECEBER_ANEXO))
                                                                        {
                                                                            <tr>
                                                                                <td>@cond.CRAN_NM_TITULO</td>
                                                                                <td>@cond.CRAN_DT_ANEXO.ToShortDateString()</td>
                                                                                @if (cond.CRAN_IN_TIPO == 1)
	                                                                            {
                                                                                    <td>Imagem</td>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <td>Arquivo</td>
                                                                                }
                                                                                <td class="td-one-action">
                                                                                    @if (cond.CRAN_IN_TIPO == 1)
	                                                                                {
                                                                                        @Html.TableLinkDetails(cond.CRAN_CD_ID, "VerAnexoLancamentoCR","fa-camera", "Visualizar")
	                                                                                }
                                                                                    @Html.TableLinkDetails(cond.CRAN_CD_ID, "DownloadLancamentoCR","fa-download", "Download")
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            }
	                                                    }  
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Parcelas*@
                            <div id="tab-5" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">                                            
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                <div class="input-group">
                                                    Parcelado
                                                    <span class="input-group-btn">
                                                        @Html.CheckBoxFor(m => m.Parcelado, new { @class = "checkbox i-checks" , @readonly="readonly"})
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                        
                                    <br />
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Valor Parcelado
                                                @Html.TextBoxFor(m => m.CARE_VL_PARCELADO, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Num.Parcelas
                                                @Html.TextBoxFor(m => m.CARE_IN_PARCELAS, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                Data inicial
                                                @Html.TextBoxFor(m => m.CARE_DT_INICIO_PARCELA, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                Periodicidade
                                                @Html.TextBoxFor(m => m.PERIODICIDADE.PERI_NM_NOME, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12"> 
                                            <h4>Parcelas do Lançamento</h4>
                                            <br />
                                            <div class="form-group">
                                                <div class="ibox-content">
                                                    @if (Model.CONTA_RECEBER_PARCELA != null)
	                                                {
                                                        if (Model.CONTA_RECEBER_PARCELA.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Número</th>
                                                                        <th>Vencimento</th>
                                                                        <th>Valor</th>
                                                                        <th>Descrição</th>
                                                                        <th></th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.CONTA_RECEBER_PARCELA))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.CRPA_IN_PARCELA</td>
                                                                            <td>@cond.CRPA_DT_VENCIMENTO.Value.ToShortDateString()</td>
                                                                            <td>@cond.CRPA_VL_VALOR</td>
                                                                            <td>@cond.CRPA_DS_DESCRICAO</td>
                                                                            @if (cond.CRPA_IN_QUITADA == 1)
                                                                            {
                                                                                <td><img src="~/Images/gallery/Rec_Sim.png" style="width: auto; height: auto; max-height: 30px; max-width: 25px;"></td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td><img src="~/Images/gallery/Rec_Nao.png" style="width: auto; height: auto; max-height: 30px; max-width: 25px;"></td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @Html.TableLinkDetails(cond.CRPA_CD_ID, "VerParcelaCR","fa-search", "Consultar Parcela")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
	                                                }   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            @*Observações*@
                            <div id="tab-6" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VerCR", "Financeiro", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                                        {
                                            <div class="alert alert-danger">
                                                <button type="button" class="close" data-dismiss="alert">×</button>
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                        }
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;"> 
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Observações
                                                    @Html.TextAreaFor(m => m.CARE_TX_OBSERVACOES, new { @class = "form-control", style = "width: 1040px; height: 400px;", autofocus = true , @readonly="readonly"})
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Tags*@
                            <div id="tab-7" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <hr />
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;"> 
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Tags</h4>
                                                <br />
                                                    @if (Model.CONTA_RECEBER_TAG != null)
	                                                {
                                                        foreach (var cond in (Model.CONTA_RECEBER_TAG))
                                                        {
                                                            <div class="col-lg-1 col-md-1 col-xs-3">
                                                                @if (cond.TIPO_TAG.TITA_IN_TIPO == 1)
	                                                            {
                                                                    <span class="label label-primary">@cond.TIPO_TAG.TITA_NM_NOME</span>
	                                                            }
                                                                @if (cond.TIPO_TAG.TITA_IN_TIPO == 2)
	                                                            {
                                                                    <span class="label label-warning">@cond.TIPO_TAG.TITA_NM_NOME</span>
	                                                            }
                                                                @if (cond.TIPO_TAG.TITA_IN_TIPO == 3)
	                                                            {
                                                                    <span class="label label-danger">@cond.TIPO_TAG.TITA_NM_NOME</span>
	                                                            }                                                                
                                                                @if (cond.TIPO_TAG.TITA_IN_TIPO == 4)
	                                                            {
                                                                    <span class="label label-success">@cond.TIPO_TAG.TITA_NM_NOME</span>
	                                                            }                                                                
                                                            </div>
                                                        }
	                                                }   
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            @*Indicadores*@
                            <div id="tab-8" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        @*<div class="col-lg-6">
                                            <div class="ibox float-e-margins">
                                                <div class="ibox-title">
                                                    <span class="label label-primary pull-right">Hoje</span>
                                                    <h5>Últimos Pedidos de Vendas</h5>
                                                </div>
                                                <div class="ibox-content">
