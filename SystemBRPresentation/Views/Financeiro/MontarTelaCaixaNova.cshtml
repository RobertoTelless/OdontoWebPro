                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                            @if ((ViewBag.Despesas as List<EntitiesServices.Model.CONTA_BANCARIA_LANCAMENTO>).Count > 0)                                        {
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Número</th>
                                            <th>Data</th>
                                            <th>Descrição</th>
                                            <th>Valor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cond in (ViewBag.Despesas as List<EntitiesServices.Model.CONTA_BANCARIA_LANCAMENTO>))
                                        {
                                            <tr>
                                                <td>@cond.CBLA_NR_NUMERO</td>
                                                <td>@cond.CBLA_DT_LANCAMENTO.Value.ToShortDateString()</td>
                                                <td>@cond.CBLA_DS_DESCRICAO</td>
                                                <td>@CrossCutting.Formatters.DecimalFormatter(cond.CBLA_VL_VALOR.Value)</td>
                                            </tr>
                                        }
