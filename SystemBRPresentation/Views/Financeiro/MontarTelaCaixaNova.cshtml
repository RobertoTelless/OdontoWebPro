    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Conta Bancária</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>           
                <div class="ibox-content">
                    <div class="row">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-6 col-md-6 col-xs-12">
                                Conta
                                @Html.TextBoxFor(m => m.COBA_NM_NOME_EXIBE, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                            </div>
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Saldo Atual
                                @Html.TextBoxFor(m => m.COBA_VL_SALDO_ATUAL, new { @class = "form-control", autofocus = true, @readonly="readonly", @style="color:green; font-weight:bold" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                @Html.ButtonLinkIndex(text: "Novo Lançamento", controller: "Financeiro", action: "IncluirLancamentoCB")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9 col-md-9 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>           
            
                @using (Html.BeginForm("FiltrarCaixa", "Financeiro", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Tipo de Filtro
                                @Html.DropDownListFor(m => m.COBA_IN_TIPO_FILTRO, (SelectList)ViewBag.Escopo, "Selecionar", new { @class = "form-control", autofocus = true })                            
                            </div>
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Conta Bancária
                                @Html.DropDownListFor(m => m.COBA_IN_CONTA_SELECAO, (SelectList)ViewBag.Contas, "Selecionar", new { @class = "form-control", autofocus = true })                            
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data de Referencia
                                @Html.TextBoxFor(m => m.COBA_DT_SELECAO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Financeiro", action: "RetirarFiltroCaixa")
                            </div>
                            <div class="col-lg-4 col-md-4 col-xs-12">
                                @Html.ButtonLinkIndex(text: "Voltar", controller: "Financeiro", action: "Voltar")
                                @Html.ButtonLinkIndex(text: "Dashboard", controller: "Financeiro", action: "VoltarDashboard")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-12">
            <h4><b>Tipo de Filtro</b></h4>
            <h5>Por Mês: Filtra o mês da data selecionada</h5>
            <h5>Por Semana: Filtra a semana da data selecionada</h5>
            <h5>Por Mês: Filtra pela data selecionada</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lançamentos</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                            @if ((ViewBag.Lancamentos as List<EntitiesServices.Model.CONTA_BANCARIA_LANCAMENTO>).Count > 0)                                        {
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Número</th>
                                            <th>Tipo</th>
                                            <th>Data</th>
                                            <th>Descrição</th>
                                            <th>Origem</th>
                                            <th>Valor</th>
                                            <th class="td-one-action">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cond in (ViewBag.Lancamentos as List<EntitiesServices.Model.CONTA_BANCARIA_LANCAMENTO>))
                                        {
                                            <tr>
                                                <td>@cond.CBLA_NR_NUMERO</td>
                                                @if (cond.CBLA_IN_TIPO == 1)
	                                            {
                                                    <td>C</td>
                                                }
                                                else
                                                {
                                                    <td>D</td>
                                                }
                                                <td>@cond.CBLA_DT_LANCAMENTO.Value.ToShortDateString()</td>
                                                <td>@cond.CBLA_DS_DESCRICAO</td>
                                                @if (cond.CBLA_IN_ORIGEM == 1)
	                                            {
                                                    <td>Manual</td>
                                                }
                                                else if (cond.CBLA_IN_ORIGEM == 2)
                                                {
                                                    <td>Conta a Receber</td>
                                                }
                                                else
                                                {
                                                    <td>Conta a Pagar</td>
                                                }
                                                <td>@CrossCutting.Formatters.DecimalFormatter(cond.CBLA_VL_VALOR.Value)</td>
                                                <td class="td-one-action">
                                                    @Html.TableLinkDetails(cond.CBLA_CD_ID, "VerLancamentoCaixa","fa-search", "Visualizar")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                     </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Receitas no Mês</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
