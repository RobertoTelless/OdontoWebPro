@using Presentation.Extensions
@using CrossCutting;
@model EntitiesServices.Model.CONTRATO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Contratos</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Contratos</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Contratos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Contratos</h1>
                    <div class="stat-percent font-bold text-navy">32% <i class="fa fa-level-up"></i></div>
                    <small>Contratos Cadastrados</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Contratos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.ContratosOperacao</h1>
                    <div class="stat-percent font-bold text-navy">32% <i class="fa fa-level-up"></i></div>
                    <small>Contratos em Operação</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Evolução de Contratos</h5>
                </div>
                <div class="ibox-content">
                    <h5>Contratos</h5>
                    <h2>@ViewBag.Contratos</h2>
                    <div id="sparkline1"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>           
            
                @using (Html.BeginForm("FiltrarContrato", "GestaoComercial", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Categoria do Contrato
                                    @Html.DropDownListFor(m => m.CACT_CD_ID, (SelectList)ViewBag.Categorias, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Tipo do Contrato
                                    @Html.DropDownListFor(m => m.TICT_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Etapa do Fluxo
                                    @Html.DropDownListFor(m => m.CONT_IN_WORKFLOW, (SelectList)ViewBag.Fluxo, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Nome
                                    @Html.TextBoxFor(m => m.CONT_NM_NOME, new { @class = "form-control", autofocus = true })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    Descrição
                                    @Html.TextBoxFor(m => m.CONT_DS_DESCRICAO, new { @class = "form-control", autofocus = true })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    @Html.ButtonActionSubmit(text: "Filtrar")
                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "GestaoComercial", action: "RetirarFiltroContrato")
                                    @Html.ButtonLinkIndex(text: "Exibir Todos", controller: "GestaoComercial", action: "MostrarTudoContrato")
                                    @Html.ButtonLinkIndex(text: "Novo Contrato", controller: "GestaoComercial", action: "IncluirContrato")
                                    @Html.ButtonLinkIndex(text: "Dashboard de Gestão Comercial", controller: "BaseAdmin", action: "CarregarDesenvolvimento")
                                    @Html.ButtonLinkIndex(text: "Dashboard Inicial", controller: "BaseAdmin", action: "CarregarAdmin")
                                </div>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Contratos</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                            @if ((ViewBag.Listas as List<EntitiesServices.Model.CONTRATO>).Count > 0)
                            {
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Categoria</th>   
                                            <th>Tipo</th>   
                                            <th>Número</th>
                                            <th>Nome</th>
                                            <th>Data Inicial</th>   
                                            <th>Status</th>
                                            <th>Workflow</th>
                                            <th>Cancelado</th>
                                            <th class="td-one-action">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.CONTRATO>))
                                        {
                                            <tr>
                                                <td>@cond.CATEGORIA_CONTRATO.CACT_NM_NOME</td>
                                                <td>@cond.TIPO_CONTRATO.TICT_NM_NOME</td>
                                                <td>@cond.CONT_NM_NUMERO_CONTRATO</td>
                                                <td>@cond.CONT_NM_NOME</td>
                                                <td>@cond.CONT_DT_INICIO.ToShortDateString()</td>
                                                <td>@cond.STATUS_CONTRATO.STCT_NM_NOME</td>
                                                @if (cond.CONT_IN_WORKFLOW == 1)
	                                            {
                                                    <td>Aprovação</td>
                                                }
                                                else if (cond.CONT_IN_WORKFLOW == 2)
                                                {
                                                    <td>Preparação</td>
                                                }
                                                else if (cond.CONT_IN_WORKFLOW == 3)
                                                {
                                                    <td>Operação</td>
                                                }
                                                else if (cond.CONT_IN_WORKFLOW == 4)
                                                {
                                                    <td>Encerramento</td>
                                                }
                                                else if (cond.CONT_IN_WORKFLOW == 5)
                                                {
                                                    <td>Encerrado</td>
                                                }
                                                @if (cond.CONT_IN_CANCELADO == 1)
	                                            {
                                                    <td>Sim</td>
                                                }
                                                else 
                                                {
                                                    <td>Não</td>
                                                }
                                                <td class="td-one-action">
                                                    @Html.TableLinkDetails(cond.CONT_CD_ID, "WorkflowContrato","fa-stack-overflow", "Entrar no Workflow")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });

           

        });

    </script>
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

