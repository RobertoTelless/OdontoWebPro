                @using (Html.BeginForm("VerConta", "Banco", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                {
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert">Fechar</button>
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }
                        <div class="form-group">
                            @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseConta", controller: "Banco")
                        </div>
                        <div class="row">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    Tipo de Conta
                                    @Html.HiddenFor(m => m.COBA_CD_ID)
                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                    @Html.HiddenFor(m => m.BANC_CD_ID)
                                    @Html.HiddenFor(m => m.COBA_IN_ATIVO)
                                    @Html.HiddenFor(m => m.COBA_VL_SALDO_ATUAL)
                                    @Html.HiddenFor(m => m.COBA_VL_SALDO_INICIAL)
                                    @Html.TextBoxFor(m => m.TIPO_CONTA.TICO_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Num.Agência
                                    @Html.TextBoxFor(m => m.COBA_NR_AGENCIA, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Nome da Agência
                                    @Html.TextBoxFor(m => m.COBA_NM_AGENCIA, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Número da Conta
                                    @Html.TextBoxFor(m => m.COBA_NR_CONTA, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Data de Abertura
                                    @Html.TextBoxFor(m => m.COBA_DT_ABERTURA, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    Nome da Conta
                                    @Html.TextBoxFor(m => m.COBA_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Saldo Inicial
                                    @Html.TextBoxFor(m => m.SaldoInicial, "{0:n2}", new { @class = "form-control", autofocus = true, @readonly="readonly", @style="color:green; font-weight:bold" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Saldo Atual
                                    @if (Model.SaldoAtual > 0)
                                    {
                                        @Html.TextBoxFor(m => m.SaldoAtual, "{0:n2}", new { @class = "form-control", autofocus = true, @readonly="readonly", @style="color:red; font-weight:bold" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(m => m.SaldoAtual, "{0:n2}", new { @class = "form-control", autofocus = true, @readonly="readonly", @style="color:blue; font-weight:bold" })
                                    }
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    Nome do Gerente
                                    @Html.TextBoxFor(m => m.COBA_NM_GERENTE, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    Telefones    
                                    @Html.TextBoxFor(m => m.COBA_NR_TELEFONE, new { @class = "form-control", autofocus = true, @id="tel", @readonly="readonly" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    <div class="input-group">
