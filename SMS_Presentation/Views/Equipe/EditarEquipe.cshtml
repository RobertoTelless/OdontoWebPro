                                                    <br />
                                                    <div class="form-group">
                                                        <input type="submit" value="Incluir Foto do Usuário" class="btn btn-sm btn-success" />
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    @if (!String.IsNullOrEmpty(Model.USUA_AQ_FOTO))
	                                                {
                                                        <img src="@Url.Content(Model.USUA_AQ_FOTO)" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Imagens/Base/FotoBase.jpg" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                </div>                       
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12"> 
                                            <h4>Anexos do Usuário</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileUsuario", "Administracao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.USUARIO_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style ="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.USUARIO_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.USAN_NM_TITULO</td>
                                                                            <td>@cond.USAN_DT_ANEXO.Value.ToShortDateString()</td>
                                                                            @if (cond.USAN_IN_TIPO == 1)
	                                                                        {
                                                                                <td>Imagem/Video</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.USAN_IN_TIPO == 1 || cond.USAN_IN_TIPO == 2)
	                                                                            {
                                                                                    @Html.TableLinkDetails(cond.USAN_CD_ID, "VerAnexoEquipe","fa-camera", "Visualizar")
	                                                                            }
                                                                                @Html.TableLinkDetails(cond.USAN_CD_ID, "DownloadEquipe","fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <input type="file" name="file" id="file" class="btn btn-sm btn-warning"/>
                                                        <br />
                                                        <div class="form-group">
                                                            <input type="submit" value="Incluir Anexo do Usuário" class="btn btn-sm btn-success" />
                                                            @Html.ButtonLinkIndex(text: "Ver Imagens em Sequencia", action: "SlideShowEquipe", controller: "Equipe")
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

