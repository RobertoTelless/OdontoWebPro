                                                @using (Html.BeginForm("UploadFotoUsuario", "Administracao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container3" }))
                                                {
                                                    <br />
