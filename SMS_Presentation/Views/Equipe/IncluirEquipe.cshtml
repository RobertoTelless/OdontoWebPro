@using Presentation.Extensions
@model OdontoWeb.ViewModels.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Equipe</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaEquipeLista", "Equipe")">Equipe</a>
            </li>
            <li class="active">
                <strong>Equipe - Inclusão</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Equipe - Inclusão</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                @using (Html.BeginForm("IncluirEquipe", "Equipe", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                {
                    <div class="ibox-content">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert">Fechar</button>
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }
                        <div class="form-group">
                            @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBase", controller: "Equipe")
                        </div>
                        <div class="row">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    Nome*
                                    @Html.TextBoxFor(m => m.USUA_NM_NOME, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NM_NOME, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    E-Mail*
                                    @Html.TextBoxFor(m => m.USUA_NM_EMAIL, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NM_EMAIL, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Perfil de Acesso*
                                    @Html.DropDownListFor(m => m.PERF_CD_ID, (SelectList)ViewBag.Perfis, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                    @Html.ValidationMessageFor(m => m.PERF_CD_ID, "",new { @style="color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Login*
                                    @Html.TextBoxFor(m => m.USUA_NM_LOGIN, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NM_LOGIN, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Categoria*
                                    @Html.DropDownListFor(m => m.CAUS_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                    @Html.ValidationMessageFor(m => m.CAUS_CD_ID, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Admissão
                                    @Html.TextBoxFor(m => m.USUA_DT_ADMISSAO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "data" })
                                    @Html.ValidationMessageFor(m => m.USUA_DT_ADMISSAO, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Data Nasc.
                                    @Html.TextBoxFor(m => m.USUA_DT_NASCIMENTO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "data" })
                                    @Html.ValidationMessageFor(m => m.USUA_DT_NASCIMENTO, "",new { @style="color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Telefone
                                    @Html.TextBoxFor(m => m.USUA_NR_TELEFONE, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_TELEFONE, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Celular
                                    @Html.TextBoxFor(m => m.USUA_NR_CELULAR, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_CELULAR, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Unidade*
                                    @Html.DropDownListFor(m => m.FILI_CD_ID, (SelectList)ViewBag.Filiais, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                    @Html.ValidationMessageFor(m => m.FILI_CD_ID, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Cargo*
                                    @Html.DropDownListFor(m => m.CARG_CD_ID, (SelectList)ViewBag.Cargos, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                    @Html.ValidationMessageFor(m => m.CARG_CD_ID, "",new { @style="color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    CPF*
                                    @Html.TextBoxFor(m => m.USUA_NR_CPF, new { @class = "form-control", autofocus = true, @id = "cpf" })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_CPF, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    NIS*
                                    @Html.TextBoxFor(m => m.USUA_NR_NIS, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_NIS, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    CTPS
                                    @Html.TextBoxFor(m => m.USUA_NR_CTPS, new { @class = "form-control", autofocus = true})
                                    @Html.ValidationMessageFor(m => m.USUA_NR_CTPS, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    CTPS Emissão
                                    @Html.TextBoxFor(m => m.USUA_DT_CTPS_EMISSAO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "data" })
                                    @Html.ValidationMessageFor(m => m.USUA_DT_CTPS_EMISSAO, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    RG
                                    @Html.TextBoxFor(m => m.USUA_NR_RG, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_RG, "",new { @style="color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    CRO
                                    @Html.TextBoxFor(m => m.USUA_NR_CRO, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_CRO, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    CNPJ
                                    @Html.TextBoxFor(m => m.USUA_NR_CNPJ, new { @class = "form-control", autofocus = true, @id = "cnpj" })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_CNPJ, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    Empresa
                                    @Html.TextBoxFor(m => m.USUA_NM_EMPRESA, new { @class = "form-control", autofocus = true})
                                    @Html.ValidationMessageFor(m => m.USUA_NM_EMPRESA, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Salário
                                    @Html.TextBoxFor(m => m.USUA_VL_SALARIO, new { @class = "form-control", autofocus = true})
                                    @Html.ValidationMessageFor(m => m.USUA_VL_SALARIO, "",new { @style="color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Endereço
                                    @Html.TextBoxFor(m => m.USUA_NM_ENDERECO, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NM_ENDERECO, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Bairro
                                    @Html.TextBoxFor(m => m.USUA_NM_BAIRRO, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_NM_BAIRRO, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Cidade
                                    @Html.TextBoxFor(m => m.USUA_NM_CIDADE, new { @class = "form-control", autofocus = true})
                                    @Html.ValidationMessageFor(m => m.USUA_NM_CIDADE, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    UF
                                    @Html.DropDownListFor(m => m.USUA_SG_CIDADE_UF, (SelectList)ViewBag.UFs, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                    @Html.ValidationMessageFor(m => m.USUA_SG_CIDADE_UF, "",new { @style="color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    CEP
                                    @Html.TextBoxFor(m => m.USUA_NR_CEP, new { @class = "form-control", autofocus = true, @id = "cep" })
                                    @Html.ValidationMessageFor(m => m.USUA_NR_CEP, "",new { @style="color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    Observações
                                    @Html.TextAreaFor(m => m.USUA_TX_OBSERVACOES, new { @class = "form-control", style = "width: 1040px; height: 100px;", autofocus = true})
                                    @Html.ValidationMessageFor(m => m.USUA_TX_OBSERVACOES, "",new { @style="color:red" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.ButtonActionSubmit(text: "Confirma Inclusão na Equipe", htmlAttributes: new { id = "basictoast" })
                            @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBase", controller: "Equipe")
                        </div>
                    </div>
                }
            </div>
         </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
