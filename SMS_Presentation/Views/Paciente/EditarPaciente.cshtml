                                                    @Html.HiddenFor(m => m.PACI_IN_ALERGICO_MEDICAMENTO)
                                                    @Html.HiddenFor(m => m.PACI_IN_ALGUMA_DOENCA)
                                                    @Html.HiddenFor(m => m.PACI_IN_BEBE)
                                                    @Html.HiddenFor(m => m.PACI_IN_FUMA)
                                                    @Html.HiddenFor(m => m.PACI_IN_HOSPITALIZADO)
                                                    @Html.HiddenFor(m => m.PACI_IN_USO_MEDICAMENTO)
                                                    @Html.HiddenFor(m => m.PACI_DS_ALERGICO_MEDICAMENTO)
                                                    @Html.HiddenFor(m => m.PACI_DS_ALGUMA_DOENCA)
