                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group" style="margin: 30px -15px 0 -15px;" id="containerEnd">
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Endereço
                                                    @Html.TextBoxFor(m => m.PACI_NM_ENDERECO, new { @class = "form-control", autofocus = true, @id = "endereco" })
                                                    @Html.ValidationMessageFor(m => m.PACI_NM_ENDERECO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Bairro
                                                    @Html.TextBoxFor(m => m.PACI_NM_BAIRRO, new { @class = "form-control", autofocus = true, @id = "bairro" })
                                                    @Html.ValidationMessageFor(m => m.PACI_NM_BAIRRO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Cidade
                                                    @Html.TextBoxFor(m => m.PACI_NM_CIDADE, new { @class = "form-control", autofocus = true, @id = "cidade" })
                                                    @Html.ValidationMessageFor(m => m.PACI_NM_CIDADE, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    UF
