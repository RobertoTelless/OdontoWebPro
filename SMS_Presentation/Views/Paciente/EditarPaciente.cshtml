                                                        </div>
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Categoria*
                                                            @Html.DropDownListFor(m => m.CAPA_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.CAPA_CD_ID, "", new { @style = "color:red" })
                                                        </div>
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Sexo*
                                                            @Html.DropDownListFor(m => m.PACI_IN_SEXO, (SelectList)ViewBag.Sexo, "Selecionar", new { @class = "form-control", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PACI_IN_SEXO, "", new { @style = "color:red" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                        <div class="col-lg-4 col-md-4 col-xs-12">
                                                            Nome*
                                                            @Html.TextBoxFor(m => m.PACI_NM_NOME, new { @class = "form-control", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PACI_NM_NOME, "", new { @style = "color:red" })
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            CPF
                                                            @Html.TextBoxFor(m => m.PACI_NR_CPF, new { @class = "form-control", @id = "cpf", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PACI_NR_CPF, "", new { @style = "color:red" })
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            RG
                                                            @Html.TextBoxFor(m => m.PACI_NR_RG, new { @class = "form-control", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PACI_NR_RG, "", new { @style = "color:red" })
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Prontuário
                                                            @Html.TextBoxFor(m => m.PACI_NR_PRONTUARIO, new { @class = "form-control", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PACI_NR_PRONTUARIO, "", new { @style = "color:red" })
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Data Nasc.
                                                            @Html.TextBoxFor(m => m.PACI_DT_NASCIMENTO, new { @class = "form-control", @id = "data", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PACI_DT_NASCIMENTO, "", new { @style = "color:red" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Paciente", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-10 col-md-10 col-xs-12">
                                            <div class="form-group">
                                                <h4>Foto do Paciente</h4>
                                                @using (Html.BeginForm("UploadFotoPaciente", "Paciente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container3" }))
                                                {
                                                    <br />
                                                    <input type="file" accept=".jpg, .png, .jpeg, .gif|images/*" name="file" id="file" class="btn btn-sm btn-warning" />
                                                    <br />
                                                    <div class="form-group">
                                                        <input type="submit" value="Incluir Foto do Paciente" class="btn btn-sm btn-success" />
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    @if (!String.IsNullOrEmpty(Model.PACI_AQ_FOTO))
                                                    {
                                                        <img src="@Url.Content(Model.PACI_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos do Paciente</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFilePaciente", "Paciente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.PACIENTE_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.PACIENTE_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.PAAN_NM_TITULO</td>
                                                                            <td>@cond.PAAN_DT_ANEXO.Value.ToShortDateString()</td>
                                                                            @if (cond.PAAN_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else if (cond.PAAN_IN_TIPO == 2)
                                                                            {
                                                                                <td>Vídeo</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>PDF</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.PAAN_IN_TIPO == 1 || cond.PAAN_IN_TIPO == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.PAAN_CD_ID, "VerAnexoPaciente", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.PAAN_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.PAAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank" ></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.PAAN_CD_ID, "DownloadPaciente", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <input type="file" name="file" id="file" class="btn btn-sm btn-warning" />
                                                        <br />
                                                        <div class="form-group">
                                                            <input type="submit" value="Incluir Anexo do Paciente" class="btn btn-sm btn-success" />
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

