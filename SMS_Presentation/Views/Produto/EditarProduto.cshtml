@using Presentation.Extensions
@model OdontoWeb.ViewModels.ProdutoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<div class="wrapper wrapper-content animated fadeInRight">

    <div id="prtpModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                @using (Html.BeginForm("EditarPC", "Produto", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                {
                    <div class="modal-header">
                        <h5 class="modal-title">Editar custo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.PROD_CD_ID)
                            <input id="prtpCd" type="hidden" name="id" />
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Filial
                                @Html.DropDownListFor(m => m.FILI_CD_ID, (SelectList)ViewBag.Filiais, "Selecionar", new { @class = "form-control", autofocus = true, id = "filialModal" })
                                @Html.ValidationMessageFor(m => m.FILI_CD_ID, "", new { @style = "color:red" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Custo
                                @Html.TextBoxFor(m => m.PROD_VL_CUSTO, new { @class = "form-control", autofocus = true, id = "custoModal", onfocusout = "CalculaPrecoEdicao()" })
                                @Html.ValidationMessageFor(m => m.PROD_VL_CUSTO, "", new { @style = "color:red" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Markup
                                @Html.TextBoxFor(m => m.PRO_VL_MARKUP_PADRAO, new { @class = "form-control", autofocus = true, id = "markupModal", onfocusout = "CalculaPrecoEdicao()" })
                                @Html.ValidationMessageFor(m => m.PRO_VL_MARKUP_PADRAO, "", new { @style = "color:red" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Preço (R$)
                                @Html.TextBoxFor(m => m.PRTP_VL_PRECO, new { @class = "form-control", autofocus = true, id = "precoModal" })
                                @Html.ValidationMessageFor(m => m.PRTP_VL_PRECO, "", new { @style = "color:red" })
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @Html.ButtonActionSubmit(text: "Confirma edição", htmlAttributes: new { id = "basictoast" })
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="page-title">
        <h3 class="title">Produtos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaProduto", "Produto")">Produtos</a>
            </li>
            <li class="active">
                <strong>Produtos - Consulta & Edição</strong>
            </li>
        </ol>
        <br />
    </div>

    @*TABS - PRINCIPAL*@
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <div style="float: right;" class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                    <div class="row">
                        <div style="text-align: center;" class="col-lg-12 col-md-12 col-xs-12">
                            <h5>Produto - Edição</h5>
                            <span style="margin-right: 50px; font-weight: 500; font-size: 20px;">@Model.PROD_NM_NOME</span>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    @using (Html.BeginForm("EditarProduto", "Produto", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                    {
                        <div class="form-group">
                            @Html.ButtonActionSubmit(text: "Confirma edição de Produto", htmlAttributes: new { id = "basictoast" })
                            @Html.ButtonLinkIndex(text: "Gerar Relatório", action: "GerarRelatorioDetalhe", controller: "Produto")
                            @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseProduto", controller: "Produto")
                        </div>
                        <div class="tabs-container">
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-3">Especificação</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-2">Estoque</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-5">Informações Tributárias</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-8">Foto & Anexos</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-9">Custos & Preços</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-10">Observações</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-11">Movimentação do Estoque</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-12">Resumos</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row" style="width: 100%;">
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                <div style="text-align: center; margin-top: 25px; line-height: 10px;">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.FILI_CD_ID)
                                                    @Html.HiddenFor(m => m.PROD_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.PROD_CD_ID)
                                                    @Html.HiddenFor(m => m.PROD_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.PROD_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.PROD_IN_AVISA_MINIMO)
                                                    @*@Html.HiddenFor(m => m.PROD_IN_BALANCA_PDV)
                                                    @Html.HiddenFor(m => m.PROD_IN_BALANCA_RETAGUARDA)
                                                    @Html.HiddenFor(m => m.PROD_IN_COBRAR_MAIOR)
                                                    @Html.HiddenFor(m => m.PROD_IN_GERAR_ARQUIVO)
                                                    @Html.HiddenFor(m => m.PROD_NM_ORIGEM)
                                                    @Html.HiddenFor(m => m.PROD_NM_SLUG)
                                                    @Html.HiddenFor(m => m.PROD_NR_DIAS_VALIDADE)
                                                    @Html.HiddenFor(m => m.PROD_NR_GARANTIA)
                                                    @Html.HiddenFor(m => m.PROD_PC_MARKUP_MININO)
                                                    @Html.HiddenFor(m => m.PROD_QN_ESTOQUE)*@
                                                    @Html.HiddenFor(m => m.PROD_QN_QUANTIDADE_INICIAL)
                                                    @*@Html.HiddenFor(m => m.PROD_VL_PRECO_MINIMO)
                                                    @Html.HiddenFor(m => m.PRTP_VL_DESCONTO_MAXIMO)*@
                                                    @Html.HiddenFor(m => m.SUPR_CD_ID)
                                                    @Html.HiddenFor(m => m.UNID_CD_ID)
                                                    @if (!String.IsNullOrEmpty(Model.PROD_AQ_FOTO))
                                                    {
                                                        <img src="@Url.Content(Model.PROD_AQ_FOTO)" style="width: auto; height: auto; max-height: 160px; max-width: 120px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '@Url.Content(Model.PROD_AQ_FOTO)')">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 160px; max-width: 120px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '~/Images/gallery/10s.jpg')">
                                                    }
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                </div>
                                            </div>
                                            <div class="col-md-11">
                                                <div class="row">
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Categoria*
                                                        @Html.DropDownListFor(m => m.CAPR_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true, onchange = "FiltrarSubCategoriaProduto($(this).val(), $(this))", id = "catProd" })
                                                        @Html.ValidationMessageFor(m => m.CAPR_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Subcategoria
                                                        @Html.DropDownListFor(m => m.SUPR_CD_ID, (SelectList)ViewBag.Subs, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.SUPR_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Unidade
                                                        @Html.DropDownListFor(m => m.UNID_CD_ID, (SelectList)ViewBag.Unidades, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.UNID_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                                <br />
                                                <div class="row">
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Código
                                                        @Html.TextBoxFor(m => m.PROD_CD_CODIGO, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                        @Html.ValidationMessageFor(m => m.PROD_CD_CODIGO, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Código de Barras (Número)
                                                        @Html.TextBoxFor(m => m.PROD_NR_BARCODE, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NR_BARCODE, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-xs-12">
                                                        Nome*
                                                        @Html.TextBoxFor(m => m.PROD_NM_NOME, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NM_NOME, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Descrição
                                                    @Html.TextAreaFor(m => m.PROD_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PROD_DS_DESCRICAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Informações do Produto
                                                    @Html.TextAreaFor(m => m.PROD_DS_INFORMACOES, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PROD_DS_INFORMACOES, "", new { @style = "color:red" })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Produto", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    </div>
                                </div>

                                @*Estoque*@
                                <div id="tab-2" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Estoque Máximo
                                                    @Html.TextBoxFor(m => m.PROD_QN_QUANTIDADE_MAXIMA, new { @class = "form-control touchspin2", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PROD_QN_QUANTIDADE_MAXIMA, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Estoque Mínimo
                                                    @Html.TextBoxFor(m => m.PROD_QN_QUANTIDADE_MINIMA, new { @class = "form-control touchspin2", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PROD_QN_QUANTIDADE_MINIMA, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Reserva de Estoque
                                                    @Html.TextBoxFor(m => m.PROD_QN_RESERVA_ESTOQUE, new { @class = "form-control touchspin2", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PROD_QN_RESERVA_ESTOQUE, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Data Último Movimento
                                                    @Html.TextBoxFor(m => m.PROD_DT_ULTIMA_MOVIMENTACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(m => m.PROD_DT_ULTIMA_MOVIMENTACAO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Aviso de Limite Mínimo
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.AvisaMinima, new { @class = "checkbox i-checks" })
                                                    @Html.ValidationMessageFor(m => m.AvisaMinima, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-4 col-md-4 col-xs-12">
                                                        Localização do Estoque
                                                        @Html.TextBoxFor(m => m.PROD_NM_LOCALIZACAO_ESTOQUE, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NM_LOCALIZACAO_ESTOQUE, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Peso Líquido (Kg)
                                                        @Html.TextBoxFor(m => m.PROD_QN_PESO_LIQUIDO, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_QN_PESO_LIQUIDO, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Peso Bruto (Kg)
                                                        @Html.TextBoxFor(m => m.PROD_QN_PESO_BRUTO, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_QN_PESO_BRUTO, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Tipo de Embalagem
                                                        @Html.DropDownListFor(m => m.PROD_IN_TIPO_EMBALAGEM, (SelectList)ViewBag.TiposEmbalagem, "Selecionar", new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(m => m.PROD_IN_TIPO_EMBALAGEM, "", new { @style = "color:red" })
                                                    </div>
                                                    <div id="altura" class="col-lg-2 col-md-2 col-xs-12">
                                                        Altura (cm)
                                                        @Html.TextBoxFor(m => m.PROD_NR_ALTURA, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NR_ALTURA, "", new { @style = "color:red" })
                                                    </div>
                                                    <div id="largura" class="col-lg-2 col-md-2 col-xs-12">
                                                        Largura (cm)
                                                        @Html.TextBoxFor(m => m.PROD_NR_LARGURA, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NR_LARGURA, "", new { @style = "color:red" })
                                                    </div>
                                                    <div id="comprimento" class="col-lg-2 col-md-2 col-xs-12">
                                                        Comprimento (cm)
                                                        @Html.TextBoxFor(m => m.PROD_NR_COMPRIMENTO, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NR_COMPRIMENTO, "", new { @style = "color:red" })
                                                    </div>
                                                    <div id="diametro" class="col-lg-2 col-md-2 col-xs-12">
                                                        Diâmetro (cm)
                                                        @Html.TextBoxFor(m => m.PROD_NR_DIAMETRO, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NR_DIAMETRO, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <hr>
                                                    <h4>Estoque por Filial</h4>
                                                    <br />
                                                    @if (Model.PRODUTO_ESTOQUE_FILIAL != null && Model.PRODUTO_ESTOQUE_FILIAL.Count > 0)
                                                    {
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <th>Filial</th>
                                                                    <th>Estoque</th>
                                                                    <th>Data do último movimento</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.PRODUTO_ESTOQUE_FILIAL))
                                                                {
                                                                    <tr>
                                                                        @if (cond.FILIAL != null)
                                                                        {
                                                                            <td>@cond.FILIAL.FILI_NM_NOME</td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td>-</td>
                                                                        }
                                                                        <td>@cond.PREF_QN_ESTOQUE</td>
                                                                        <td>@cond.PREF_DT_ULTIMO_MOVIMENTO</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Produto", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <h4>Fornecedores</h4>
                                                    <br />
                                                    @if (Model.PRODUTO_FORNECEDOR.Count > 0)
                                                    {
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <th>Nome</th>
                                                                    <th>E-Mail</th>
                                                                    <th>Telefone</th>
                                                                    <th>Ativo</th>
                                                                    <th class="td-one-action">Ações</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.PRODUTO_FORNECEDOR))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.FORNECEDOR.FORN_NM_NOME</td>
                                                                        <td>@cond.FORNECEDOR.FORN_NM_EMAIL</td>
                                                                        <td>@cond.FORNECEDOR.FORN_NM_TELEFONES</td>
                                                                        @if (cond.PRFO_CD_ID == 1)
                                                                        {
                                                                            <td>Sim</td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td>Não</td>
                                                                        }
                                                                        <td class="td-one-action">
                                                                            @Html.TableLinkDetails(cond.PRFO_CD_ID, "EditarProdutoFornecedor", "fa-edit", "Editar/Consultar Fornecedor")
                                                                            @if (cond.PRFO_IN_ATIVO == 1)
                                                                            {
                                                                                @Html.TableLinkDetails(cond.PRFO_CD_ID, "ExcluirProdutoFornecedor", "fa-trash-o", "Desativar Fornecedor")
                                                                            }
                                                                            else
                                                                            {
                                                                                @Html.TableLinkDetails(cond.PRFO_CD_ID, "ReativarProdutoFornecedor", "fa-refresh", "Reativar Fornecedor")
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonLinkIndex(text: "Incluir Novo Fornecedor", action: "IncluirProdutoFornecedor", controller: "Produto")
                                        </div>
                                    </div>
                                </div>

                                @*Varejo*@
                                <div id="tab-3" class="tab-pane">
                                    <div class="panel-body">
                                        @using (Html.BeginForm("EditarProduto", "Produto", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                        {
                                            <div class="row">
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Marca
                                                        @Html.TextBoxFor(m => m.PROD_NM_MARCA, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PROD_NM_MARCA, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
